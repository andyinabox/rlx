{
  "name": "rlx",
  "version": "0.1.15",
  "description": "Command line interface for couchdb",
  "author": "muji <noop@xpm.io>",
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/freeformsystems/rlx"
  },
  "bugs": {
    "url": "https://github.com/freeformsystems/rlx/issues"
  },
  "directories": {
    "bin": "./bin",
    "man": "./doc/man"
  },
  "dependencies": {
    "archy": "0.0.2",
    "async": "^0.9.0",
    "async-validate": "^0.1.13",
    "cdb": "~0.0.13",
    "circular": "^1.0.3",
    "cli-command": "~0.8.108",
    "cli-error": "~0.5.0",
    "cli-interface": "~1.0.8",
    "cli-logger": "~0.5.13",
    "cli-rc": "~1.0.1",
    "cli-util": "^1.1.13",
    "jslint": "^0.6.2",
    "jsonlint": "^1.6.2",
    "recursive-readdir": "^1.2.0",
    "request": "^2.40.0",
    "ttycolor": "^0.8.10",
    "uuid": "^1.4.1"
  },
  "devDependencies": {
    "cli-manpage": "~0.0.8",
    "mocha": "~1.17.1",
    "chai": "~1.9.0",
    "istanbul": "~0.2.6"
  },
  "scripts": {
    "docs": "npm run manual && npm run readme",
    "clean-man": "rm -fv ./doc/man/*.1",
    "manual": "npm run clean-man && manpage --output ./doc/man ./bin/rlx",
    "readme": "mdp --force -v",
    "pretest": "rm -rf ./target && mkdir ./target",
    "test": "NODE_ENV=test istanbul cover _mocha -- -u bdd --recursive --reporter list -A test/spec/"
  },
  "mdp": {
    "title": "rlx",
    "pedantic": true,
    "include": "doc/readme",
    "require": "lib",
    "links": "links.md",
    "toc": "Table of Contents",
    "base": "https://github.com/freeformsystems/rlx",
    "partial": [
      {
        "inc": [
          "introduction.md",
          "install.md"
        ]
      },
      {
        "title": "Usage",
        "bin": "rlx --help",
        "type": "code"
      },
      {
        "inc": [
          "developer.md"
        ]
      }
    ]
  }
}
